<h2>New Book</h2>

<div>
  <%= form_with model: @book do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title%>
    <%= f.label :author_id, "Author" %>
    <%= f.collection_select :author_id, Author.all, :id, :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :score %>
    <%= f.number_field :score, in: 1..100 %>
    <%= f.submit 'Save' %>
  <% end %>
</div>